#!/bin/bash

# Cores
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m'

echo -e "${GREEN}🚀 Criando projeto IABox...${NC}"

mkdir iabox-painel && cd iabox-painel

# Criar arquivos
cat > index.html << 'EOF'
[COLE O HTML ACIMA AQUI]
EOF

cat > iabox.js << 'EOF'
[COLE O iabox.js ORIGINAL AQUI]
EOF

cat > README.md << 'EOF'
[COLE O README.md ACIMA AQUI]
EOF

cat > vercel.json << 'EOF'
{
  "version": 2,
  "name": "iabox-painel",
  "builds": [
    {
      "src": "*.js",
      "use": "@vercel/static"
    },
    {
      "src": "*.html", 
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}
EOF

# Git
git init
git add .
git commit -m "feat: initial commit - IABox painel and widget"

echo -e "${GREEN}✅ Projeto criado!${NC}"
echo -e "${YELLOW}📝 Próximos passos:${NC}"
echo "1. Crie um repositório no GitHub"
echo "2. git remote add origin https://github.com/SEU_USER/SEU_REPO.git"
echo "3. git push -u origin main"
echo "4. Deploy na Vercel: https://vercel.com"
